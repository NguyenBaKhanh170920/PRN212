<Window x:Class="SE1825_FirstWPF.DockPanelWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SE1825_FirstWPF"
        mc:Ignorable="d"
        Title="DockPanelWindow" Height="450" Width="800" Activated="Window_Activated">
    <Grid>
        <DockPanel LastChildFill="False">
            <Menu x:Name="mnuMain" DockPanel.Dock="Top" Height="20">
                <MenuItem x:Name="mnuShow" Header="Category" Click="mnuShow_Click"></MenuItem>
                <MenuItem x:Name="mnuProduct" Header="Product" Click="mnuProduct_Click"></MenuItem>
                <MenuItem x:Name="mnuStaff" Header="Staff" Click="mnuStaff_Click"></MenuItem>
                <MenuItem x:Name="mnuReport" Header="Report" Click="mnuReport_Click"></MenuItem>
                <MenuItem x:Name="mnuOrder" Header="Order" Click="mnuOrder_Click"></MenuItem>
                <MenuItem x:Name="mnuProfile" Header="Profile" Click="mnuProfile_Click"></MenuItem>
                <MenuItem x:Name="mnuLogin" Header="Login" Click="mnuLogin_Click"></MenuItem>
            </Menu>
        </DockPanel>
    </Grid>
</Window>
